<?xml version="1.0" encoding="UTF-8"?>
<isp:ISPMan
            layout="vertical"
            label="ISPMan"
            paddingBottom="5"
            paddingLeft="5"
            backgroundColor="#000000"
            xmlns:mx="http://www.adobe.com/2006/mxml"
            paddingTop="5"
            paddingRight="5"
            backgroundGradientAlphas="[0.6,1.0]"
            backgroundGradientColors="[0x000000,0x323232]"
            pageTitle="ISPMan"
            horizontalGap="2"
            width="100%"
            height="100%"
            xmlns:isp="org.ufsoft.ispman.*">
    <mx:Style>
        TextArea.console {
          backgroundColor: "0xCCCCCC";
          fontSize: 9pt;
          color: "0x000000";
        }
    </mx:Style>
    <mx:Panel
              title="ISPMan Control Panel"
              roundedBottomCorners="true"
              borderAlpha="0.15"
              cornerRadius="10"
              fontSize="12"
              paddingTop="2" paddingRight="10" paddingBottom="10" paddingLeft="10"
              id="mainWindow"
              fontWeight="bold"
              height="100%" width="100%"
              x="0" y="0">

        <mx:VBox>
            <mx:HBox>

            </mx:HBox>
            <mx:HBox>
                <mx:Button id="foo" label="foo"/>
                <mx:Button id="logout" label="logout"/>
            </mx:HBox>
        </mx:VBox>
    </mx:Panel>
    <mx:ApplicationControlBar width="100%">
        <mx:VBox>
            <mx:Button id="logout" label="Logout" width="100%"/>
            <mx:Button id="ispman_home" label="ISPMan Home"/>
        </mx:VBox>
        <mx:TextArea id="status_txt" height="100%" width="100%" styleName="console"
                     htmlText="{ log }" textIndent="3" editable="false"
                     valueCommit="{status_txt.verticalScrollPosition = status_txt.maxVerticalScrollPosition}"/>
    </mx:ApplicationControlBar>
</isp:ISPMan>

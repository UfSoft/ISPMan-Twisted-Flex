<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
          layout="vertical"
          title="ISP Summary"
          width="100%"
          borderAlpha="0.15"
          cornerRadius="5"
          fontSize="12"
          roundedBottomCorners="true"
          paddingTop="2" paddingRight="5" paddingBottom="10" paddingLeft="5"
          creationComplete="creationComplete(event)">
    <mx:Script>
      import mx.controls.Alert;
      import mx.controls.Text;
      import mx.containers.Form;
      import mx.containers.FormItem;
      import mx.events.FlexEvent;

      import mx.rpc.AbstractOperation;
      import mx.rpc.events.FaultEvent;
      import mx.rpc.events.ResultEvent;
      import mx.rpc.remoting.mxml.RemoteObject;

      import mx.effects.AnimateProperty;

      private function creationComplete(event:FlexEvent):void {
        var remoteObj: RemoteObject=parentApplication.getService();
        var operation: AbstractOperation=remoteObj.getOperation('auth.overview');
        operation.addEventListener(FaultEvent.FAULT, overviewFailure);
        operation.addEventListener(ResultEvent.RESULT, overviewSucess);
        operation.send();
      }

      protected function overviewFailure(event:FaultEvent) : void {
        var errorMsg : String="Overview Failed " + event.fault.faultCode;
        Alert.show(event.fault.faultDetail, errorMsg);
      }

      protected function overviewSucess(event:ResultEvent) : void {
        for each ( var item:Object in event.result ) {
          var formItem:FormItem = new FormItem();
          formItem.label = item.label;
          var itemText:Text = new Text();
          itemText.text = item.data;
          formItem.addChild(itemText);
          overviewForm.addChild(formItem);
        }
      }

    </mx:Script>
    <mx:Form id="overviewForm"/>
</mx:Panel>

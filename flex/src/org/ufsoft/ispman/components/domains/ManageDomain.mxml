<?xml version="1.0" encoding="utf-8"?>
<mx:HDividedBox xmlns:mx="http://www.adobe.com/2006/mxml"
                width="100%" height="100%" creationComplete="creationComplete(event)">
    <mx:Script>

      import mx.controls.Alert;
      import mx.events.FlexEvent;
      import flash.display.DisplayObject;

      import org.ufsoft.ispman.components.domains.dns.SOA;
      import org.ufsoft.ispman.components.domains.users.UsersList;

      private var soa           : SOA;
      private var usersList     : UsersList;
      private var _currentChild : DisplayObject;
      public var domain        : Object;

      private function creationComplete(event:FlexEvent):void {
        //
      }
      private function switchContent(content:DisplayObject): void {
        if ( _currentChild ) {
          mainContent.removeChild(_currentChild);
        }
        _currentChild = content;
        mainContent.addChild(content);
      }

      private function showSOA(event:Event):void {
        if ( ! soa ) { soa = new SOA() }
        switchContent(soa);
      }

      private function showUsersList(event:Event):void {
        if ( ! usersList ) { usersList = new UsersList() }
        usersList.domain = domain;
        switchContent(usersList);
      }

    </mx:Script>
    <mx:Panel height="100%" width="20%" title="Manage Domain">
        <mx:Button label="Edit Domain" width="100%"/>
        <mx:Accordion width="100%" height="100%">
            <!-- Define each panel using a VBox container. -->
            <mx:VBox label="Manage DNS" width="100%"
                     paddingRight="5" paddingLeft="5" paddingTop="5" paddingBottom="5">
                <mx:Button label="SOA Records" width="100%" click="showSOA(event)"/>
                <mx:Button label="MX Records" width="100%"/>
                <mx:Button label="NS Records" width="100%"/>
                <mx:Button label="A Records" width="100%"/>
                <mx:Button label="AAAA Records" width="100%"/>
                <mx:Button label="TXT Records" width="100%"/>
                <mx:Button label="SOA Records" width="100%"/>
            </mx:VBox>
            <mx:VBox label="Manage Users" width="100%"
                     paddingRight="5" paddingLeft="5" paddingTop="5" paddingBottom="5">
                <mx:Button label="Show Users" width="100%" click="showUsersList(event)"/>
                <mx:HBox width="100%">
                    <mx:TextInput id="searchUsersInput" width="100%"/>
                    <mx:Button label="Search" paddingRight="2" paddingLeft="2"/>
                </mx:HBox>
            </mx:VBox>
            <mx:VBox label="Manage Mailgroups" width="100%" paddingTop="10" paddingBottom="10">
            </mx:VBox>
            <mx:VBox label="Manage Web Users" width="100%" paddingTop="10" paddingBottom="10">
            </mx:VBox>
            <mx:VBox label="Manage Virtual Hosts" width="100%" paddingTop="10" paddingBottom="10">
            </mx:VBox>
        </mx:Accordion>
    </mx:Panel>
    <mx:Box id="mainContent" direction="vertical" width="100%" height="100%"
            paddingTop="0" paddingRight="0" paddingBottom="0" paddingLeft="0">
    </mx:Box>
</mx:HDividedBox>
